@model List<EntityLayer.Concrate.Product>
@{
	ViewData["Title"] = "ListAllProducts";
	Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container-fluid py-4">
	<div class="row">
		<div class="col-12">
			<div class="ms-3">
				<h3 class="mb-0 h4 font-weight-bolder">Ürünler</h3>
				<p class="mb-4">
					Tüm ürünleri görüntüle ve yönet
				</p>
			</div>
		</div>
	</div>

	<!-- Ürün Listesi -->
	<div class="row g-4">
		@foreach (var item in Model)
		{
			<div class="col-md-6">
				<div class="card h-100">
					<!-- Görsel -->
					<div class="position-relative" style="height: 250px; overflow: hidden;">
						<img src="@item.ProductImages.FirstOrDefault()?.ImageUrl" class="card-img-top h-100 w-100 object-fit-cover" alt="Ürün Görseli">
					</div>

					<div class="card-body">
						<div class="d-flex justify-content-between align-items-center mb-2">
							<h5 class="card-title mb-0">@item.Name</h5>
							<span class="fw-bold text-success">@item.Price $</span> <!-- Fiyat yeşil -->
						</div>
						<br />
						<div class="row mb-3">
							<div class="col-6">
								<p class="mb-1"><strong>Kategori:</strong> @item.Category.Name</p>
								<p class="mb-1"><strong>Renk:</strong> @item.Color.ColorName</p>
								<p class="mb-1"><strong>Cinsiyet:</strong> @item.Gender</p>
							</div>
							<div class="col-6">
								<p class="mb-1"><strong>Bedenler:</strong></p>
								@item.Size
							</div>
						</div>
					</div>
					<br />
					<a asp-controller="AddProduct" asp-action="ProductDetail" asp-route-id="@item.ProductId" class="btn btn-dark-blue mx-2">
						Detayları İncele
					</a>
				</div>
			</div>	
		}
	</div>
</div>
